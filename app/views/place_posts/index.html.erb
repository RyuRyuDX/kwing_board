<p id="notice"><%= notice %></p>

<h1>拠点TOP</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">拠点名</th>
      <th scope="col">住所</>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @place_posts.each do |place_post| %>
      <tr>
        <td><%= place_post.place_name %></td>
        <td><%= place_post.address %></td>
        <td><%= link_to 'Show', place_post, class:"btn btn-outline-primary" %></td>
        <td><%= link_to 'Edit', edit_place_post_path(place_post) %></td>
        <td><%= link_to 'Destroy', place_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button type="button" class="btn btn-outline-primary"><%= link_to '新規拠点登録', new_place_post_path %></button>
