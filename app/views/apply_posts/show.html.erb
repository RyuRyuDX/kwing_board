<p id="notice"><%= notice %></p>

  <table class="table table-hover">
    <tbody>
      <tr>
        <th scope="row">応募者</th> 
        <td><%= @apply_post.candidate_name %></td>
      </tr>
      <tr>
        <th scope="row">年齢</th> 
        <td><%= @apply_post.age %></td>
      </tr>
      <tr>
        <th scope="row">メールアドレス</th> 
        <td><%= @apply_post.address %></td>
      </tr>
      <tr>
        <th scope="row">応募日</th> 
        <td><%= l @apply_post.apply_date, format: :too_short %></td>
      </tr>
      <tr>
        <th scope="row">面接日</th> 
        <td><%= l @apply_post.interview, format: :short %></td>
      </tr>
      <tr>
        <th scope="row">電話番号</th> 
        <td><%= @apply_post.phonenumber %></td>
      </tr>
      <tr>
        <th scope="row">募集コース</th> 
        <td><%= @apply_post.course %></td>
      </tr>
      <tr>
        <th scope="row">担当者</th> 
        <td><%= @apply_post.tantou %></td>
      </tr>
      <tr>
        <th scope="row">合否</th> 
        <td><%= @apply_post.passfail %></td>
      </tr>
    </tbody>
  </table>



  <% if @apply_post.passfail == "採用"%>
      <%= render "pass_candidate"%>
  <% end %>

<button type="button" class="btn btn-success"><%= link_to '編集', edit_apply_post_path(@apply_post) %></button>
<button type="button" class="btn btn-success"><%= link_to '戻る', apply_posts_path %></button>